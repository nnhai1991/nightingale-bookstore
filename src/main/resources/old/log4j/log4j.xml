<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Console Appender --> <!-- disable later  -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		 <param name="Threshold" value="DEBUG"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %5p [%c] %m%n" />				
		</layout>				
	</appender>

	<!-- Staging File Appender -->
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${webapp.shop-dashboard}/WEB-INF/logs/today.log" />
		<param name="maxFileSize" value="10240KB" />
		<param name="Append" value="false" />
		<param name="Threshold" value="DEBUG" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
		</layout>       
    </appender>
   	 	
	<!-- Production File Appender -->
	<!--<appender name="productionfile" class="org.apache.log4j.DailyRollingFileAppender">-->
     <!--&lt;!&ndash;    <param name="file" value="c:/testLog/today.log" /> &ndash;&gt;-->
     	<!--<param name="file" value="${webapp.preorder}/WEB-INF/logs/today.log" />-->
